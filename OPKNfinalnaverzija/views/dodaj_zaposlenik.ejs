<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <a class="navbar-brand" href="#">
      ADMIN
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/pocetna">Pocetna</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/menadzer/svi/projekti">Projekti</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/menadzer/forma/projekat">Dodaj projekat</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/menadzer/izvjestaj/po/projektima">Izvjestaj po projektu</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/menadzer/izvjestaj/po/radnicima/forma">Izvjestaj po radniku</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/prisustvo/forma">Prisustvo</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="mask d-flex align-items-center vh-50 gradient-custom-3 p-2">
    <div class="container-fluid p-5 vh-50">
      <div class="row d-flex justify-content-center align-items-center h-50">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow rounded" style="border-radius: 10px;">
            <div class="card-body p-2">
              <h2 class="text-center mb-5">Dodaj novog zaposlenika</h2>

              <form action="/registracija" method="post">

                <div class="form-outline mb-3">
                  <label for="ime" class="form-label">Ime</label>
                  <input type="text" class="form-control form-control-lg" id="ime" name="ime">
                </div>

                <div class="form-outline mb-3">
                  <label for="prezime" class="form-label">Prezime</label>
                  <input type="text" class="form-control form-control-lg" id="prezime" name="prezime">
                </div>

                <div class="form-outline mb-3">
                  <label for="password" class="form-label">Sifra</label>
                  <input type="text" class="form-control form-control-lg" id="password" name="password" required>
                </div>

                <div class="form-outline mb-3">
                  <label for="uloga" class="form-label">Uloga</label>
                  <select class="form-select form-select-lg" id="uloga" name="uloga">
                    <option value="Menadzer">Menadzer</option>
                    <option value="Admin">Admin</option>
                    <option value="Radnik">Radnik</option>
                  </select>
                </div>

                <div class="form-outline mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control form-control-lg" id="email" name="email">
                </div>

                <div class="form-outline mb-3">
                  <label for="nadredeni" class="form-label">Nadredeni:</label>
                  <select class="form-control" id="nadredeni" name="nadredeni">
                    <option value=""></option>
                    <% radnici.forEach(radnik => { %>
                      <option value="<%= radnik.id %>"><%= radnik.email %></option>
                    <% }); %>
                  </select>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-outline-primary">Dodaj</button>
                </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
